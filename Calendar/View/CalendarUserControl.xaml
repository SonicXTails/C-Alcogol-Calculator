<UserControl x:Class="Calendar.View.CalendarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar.View"
             mc:Ignorable="d" 
             d:DesignHeight="54" d:DesignWidth="54">
    <Grid>
        <Grid Width="44" Height="44" Background="#FF5327A2">
            <Grid.RowDefinitions>
                <RowDefinition Height="12"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="##"/>

            <Button Grid.Row="1" Click="Button_Click">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Открыть день" Click="OpenDay_Click"/>
                        <MenuItem Header="Отчистить день"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </Grid>
    </Grid>
</UserControl>
