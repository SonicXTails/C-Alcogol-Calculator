<UserControl x:Class="Calendar.View.ChoiseUSerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="310">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <CheckBox HorizontalAlignment="Center"
                  VerticalAlignment="Center"></CheckBox>



        <TextBlock x:Name="NameOfDrink"
                   Grid.Column="2"
                   Text="Напиток"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <Rectangle x:Name="PhotoOfDrink" Grid.Column="1" HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="100">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Images/cocktail.png" Stretch="Uniform"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
